<metal:macro use-macro="here/main_template/macros/master">
  <metal:slot fill-slot="main">
    <h1>Infradoc</h1>
    <table class="pat-datatables table" data-pat-datatables="paging:false;">
      <thead>
        <tr>
          <th>Nom</th>
          <th>URL</th>
          <th>Taille</th>
        </tr>
      </thead>
      <tbody>
        <tr tal:repeat="item view/applications">
          <td>${item/name}</td>
          <td>${python:item['url']}</td>
          <td>${path:item/size}</td>
        </tr>
      </tbody>
    </table>
  </metal:slot>
</metal:macro>
