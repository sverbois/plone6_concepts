<?xml version='1.0' encoding='UTF-8'?>
<registry>

    <record name="plone.default_page">
        <value>
            <element>index</element>
        </value>
    </record>

    <record name="plone.displayed_types">
        <value purge="false">
            <element>Author</element>
            <element>Book</element>
        </value>
    </record>

    <record name="plone.icon.contenttype/author">
        <field type="plone.registry.field.TextLine">
            <title>Author content type icon</title>
        </field>
        <value key="resource">++plone++bootstrap-icons/person.svg</value>
    </record>
    <record name="plone.icon.contenttype/book">
        <field type="plone.registry.field.TextLine">
            <title>Book content type icon</title>
        </field>
        <value key="resource">++plone++bootstrap-icons/book.svg</value>
    </record>

    <records interface="collective.concepts.interfaces.ISettings" prefix="collective.concepts" />

</registry>
